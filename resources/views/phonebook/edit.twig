{% extends('layout.html') %}

{% block content %}
    <h3 class="col-md-12">Редактировать запись</h3>

    <form action="{{ route('editrecord') }}" class="col-md-4" method="post">
        <input name="_token" type="hidden" value="{{ csrf_token() }}"/>
        <input type="hidden" name="id" value="{{ record.id }}" />
        <div class="form-group">
            <input type="text" class="form-control" name="fio" value="{{ record.fio }}" placeholder="ФИО" required />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="phone" value="{{ record.phone }}" placeholder="Телефон" required />
        </div>
        <div class="form-group">
            <input type="submit" value="Изменить"/>
        </div>
    </form>

{% endblock content %}
