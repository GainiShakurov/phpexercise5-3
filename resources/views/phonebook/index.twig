{% extends('layout.html') %}

{% block content %}
    <h3>Телефонная книга</h3>


    <table class="table table-striped table-bordered">
        <thead>
            <th>
                №
            </th>
            <th>
                ФИО
            </th>
            <th>
                Телефонный номер
            </th>
            <th>
                Действия
            </th>
        </thead>
        <tbody>
        {% for key, item in records %}
            <tr>
                <td>
                    {{ item.id }}
                </td>
                <td>
                    {{ item.fio }}
                </td>
                <td>
                    {{ item.phone }}
                </td>
                <td>
                    <a href="{{ route('edit') ~ '/' ~ item.id }}">Редактировать</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <form action="{{ route('add') }}" class="pull-right">
        <input name="_token" type="hidden" value="{{ csrf_token() }}"/>
        <input type="submit" value="Добавить" />
    </form>

{% endblock content %}
